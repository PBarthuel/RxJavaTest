<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/country_item_iv_flag"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/country_item_tv_country_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Courgette is joining"
        android:textStyle="bold"
        android:layout_margin="26dp"
        app:layout_constraintStart_toEndOf="@+id/country_item_iv_flag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/country_item_tv_capital"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="(le courgette)"
        android:textStyle="bold"
        android:layout_margin="26dp"
        app:layout_constraintStart_toEndOf="@+id/country_item_iv_flag"
        app:layout_constraintTop_toBottomOf="@id/country_item_tv_country_name" />

</androidx.constraintlayout.widget.ConstraintLayout>